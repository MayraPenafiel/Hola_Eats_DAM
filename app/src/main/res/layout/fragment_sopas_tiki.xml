<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentsopas"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#898657"
    tools:context=".FragmentsPlatos.FragmentSopasTiki">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenPlato"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:src="@drawable/ceviche_mixto">

        </ImageView>

        <TextView
            android:id="@+id/menunombre_plato1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagenPlato"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Nombre Plato" />
    </LinearLayout>


</FrameLayout>